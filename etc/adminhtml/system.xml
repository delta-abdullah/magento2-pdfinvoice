<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
        <tab id="bhavin" translate="label" sortOrder="400">
            <label>Bhavin</label>
        </tab>
		<section id="bhavin_pdfinvoice" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
			<label>Pdf Invoice</label>
			<tab>bhavin</tab>
			<resource>Bhavin_PdfInvoice::bhavin_pdfinvoice</resource>
			<group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" >
				<label>General</label>
				<field id="enable" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
					<label>Enable Pdf Invoice</label>
					<source_model>Bhavin\PdfInvoice\Model\Source\Status</source_model>
					<comment>
						`Enable/Disable Pdf Invoice`.
					</comment>
				</field>
			</group>
		</section>
	</system>
</config>